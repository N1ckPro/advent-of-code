{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"outDir": "dist",
		"paths": {
			"@lib": ["src/lib/index.ts"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["src/**/*.ts"],
	"ts-node": {
		"esm": true
	}
}
