{
  "name": "advent-of-code",
  "packageManager": "yarn@4.0.2",
  "type": "module",
  "scripts": {
    "day1": "ts-node src/solutions/2023/01/part1.ts && ts-node src/solutions/2023/01/part2.ts",
    "day2": "ts-node src/solutions/2023/02/part1.ts && ts-node src/solutions/2023/02/part2.ts",
    "day3": "ts-node src/solutions/2023/03/part1.ts && ts-node src/solutions/2023/03/part2.ts",
    "format": "prettier --write src && eslint src --fix --format=pretty",
    "lint": "prettier --check src && eslint src --format=pretty",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^18.19.0",
    "eslint": "^8.54.0",
    "eslint-config-neon": "^0.1.57",
    "eslint-formatter-pretty": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}